<h1>Listing posts_controllers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts_controllers.each do |posts_controller| %>
      <tr>
        <td><%= posts_controller.title %></td>
        <td><%= link_to 'Show', posts_controller %></td>
        <td><%= link_to 'Edit', edit_posts_controller_path(posts_controller) %></td>
        <td><%= link_to 'Destroy', posts_controller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Posts controller', new_posts_controller_path %>
